{% extends 'base.html.twig' %}
{% block customStylesheets %}
    <link rel="stylesheet" href="{{ asset('build/css/registerpage.css') }}"/>
{% endblock %}
{% block title %}Register{% endblock %}

{% block body %}
    <div class="container">
        <div class="blockCenterMenu"></div>
        <div class="registerMenu">
            {{ form_start(form, {'attr':{'id' : 'app'}}) }}

            <label class="labelRegisterMenu" for="task_title">Task title</label>
            <div class="rightShowError">
                {{ form_widget(form.title, {'attr': {'class': 'inputRegisterMenu', 'placeholder' : 'Title'}}) }}
            </div>
            <div class="blockForError"> <div class="errorStyle">{{ form_errors(form.title) }}</div></div>

            <label class="labelRegisterMenu" for="task_description">Description</label>
            <div class="rightShowError">
                {{ form_widget(form.description, {'attr': {'class': 'inputRegisterMenu', 'placeholder' : 'Description'}}) }}
            </div>
            <div class="blockForError">  <div class="errorStyle"> {{ form_errors(form.description) }}</div></div>


            <button type="submit" class="inputRegisterMenu inputRegisterMenuButton" value="Create account">Create
                task
            </button>

            <input type="hidden" name="token" value="{{ csrf_token('task-create') }}"/>
            {{ form_end(form) }}
        </div>
    </div>





{% endblock %}
{% block customJs %}
    <script src="https://cdn.jsdelivr.net/npm/vue/dist/vue.js"></script>
{% endblock %}




