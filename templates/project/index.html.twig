{% extends 'base.html.twig' %}
{% block customStylesheets %}

    <link rel="stylesheet" href="{{ asset('build/css/style2.css') }}"/>
{% endblock %}
{% block body %}
    <div class="all">
        <div class="page page-contact">
            <div class="page-nav">
                <div class="page-nav-inner">
                    <div class="group">
                        <a href="{{ path('project_create') }}" class="btn btn-default">Create project</a>
                        <a href="{{ path('project_index') }}" class="btn btn-default">All projects</a>
                        <a href="{{ path('project_index', {'sortBy':'invited_to_projects'}) }}" class="btn btn-default">Projects
                            I'm invited to</a>
                        <a href="{{ path('project_index', {'sortBy':'created_projects'}) }}" class="btn btn-default">My
                            projects</a>
                    </div>
                </div>
            </div>
            <div class="page-content">
                <div class="container-fluid">
                    <div class="blocks">
                        {% for project in projects %}

                            <div class="linkDiv">
                                <div class="marginDiv">
                            <a class="myblock" href="{{ path('project_view', {'id' :  project.id }) }}"><i class="fas fa-crown"></i><span
                                        class="linkText">
 {{ project.title[:50] ~ ' ' }} {{ project.createdAt|date }}
                                    {% if app.user == project.createdBy %}</span>{% endif %}
                            </a>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                    {{ knp_pagination_render(projects) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
