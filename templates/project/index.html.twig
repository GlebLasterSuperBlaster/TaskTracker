{% extends 'base.html.twig' %}
{% block customStylesheets %}
    <link rel="stylesheet" href="{{ asset('build/css/style2.css') }}" />
{% endblock %}
{% block body %}
    <div class="all">
        <div class="page page-contact">
            <div class="page-nav">
                <div class="page-nav-inner">
                    <a href="{{ path('project_create') }}" class="btn btn-accent hidden-xs">Add project</a>
                    <div class="group">
                        <a href="{{ path('project_index') }}" class="btn btn-default">All projects</a>
                        <a href="{{ path('project_index', {'sortBy':'invited_to_projects'}) }}" class="btn btn-default">Projects I'm invited to</a>
                        <a href="{{ path('project_index', {'sortBy':'created_projects'}) }}" class="btn btn-default">My projects</a>
                    </div>
                </div>
            </div>
            <div class="page-content">
                <div class="container-fluid">
                    <div class="blocks">
                        {% for project in projects %}
                            <a class="myblock" href="#">{{ project.name }} {{ project.createdAt|date }}
                                {% if app.user == project.createdBy %}<img class="imagecrown" src="images/crown.png" alt="crown">{% endif %}
                            </a>

                        {% endfor %}
                    </div>
                    {{ knp_pagination_render(projects) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}