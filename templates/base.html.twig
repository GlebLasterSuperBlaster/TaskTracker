<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Main page{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('build/css/style.css') }}"/>
        <link href="/your-path-to-fontawesome/css/all.css" rel="stylesheet">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"
              integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
        <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
        {{ encore_entry_link_tags('app') }}
    {% endblock %}
    {% block customStylesheets %}
    {% endblock %}
</head>
<body>
{% block header %}
    <div class="header">
        <div class="logo"><a class="logoLink" href="{{ path('main_page') }}">TaskTracker</a></div>
        <div class="entrance">
            <div class="newAccount"><a class="entranceLink" href="{{ path('register') }}">New Account</a></div>
            <div><a class="entranceLink" href="{{ path('login') }}">Login</a></div>
            <div class="administrator"><a class="entranceLink" href="{{ path('logout') }}">Logout</a></div>
            <div class="administrator"><a class="entranceLink" href="#">Administrator's office</a></div>
        </div>
    </div>
{% endblock %}

{% block body %}

{% endblock %}



{% block footer %}
    <div class="footer">
        <div class="footerContact">Contact</div>
        <div>
            <a class="gitIcon" href="https://github.com/chebypax/TaskTracker"><i class="fab fa-github"></i></a>
        </div>
        <div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="https://kit.fontawesome.com/1545cddb12.js"></script>
    {{ encore_entry_script_tags('app') }}

{% endblock %}
{% block customJs %}{% endblock %}
</body>
</html>
