{% extends 'base.html.twig' %}
{% block customStylesheets %}
    <link rel="stylesheet" href="{{ asset('build/css/registerpage.css') }}"/>
{% endblock %}
{% block title %}Register{% endblock %}

{% block body %}
    <div class="container">
        <div class="blockCenterMenu"></div>
        <div class="registerMenu">
            {{ form_start(form, {'attr':{'id' : 'app'}}) }}


            <label class="labelRegisterMenu" for="user_password_first">Password</label>
            <div class="rightShowError">
                {{ form_widget(form.password.first, {'attr': {'class': 'inputRegisterMenu', 'placeholder' : 'Password'}}) }}
            </div>
            <div class="blockForError">  <div class="errorStyle">{{ form_errors(form.password.first) }}</div></div>

            <label class="labelRegisterMenu" for="user_password_second">Confirm Password</label>
            <div class="rightShowError">
                {{ form_widget(form.password.second, {'attr': {'class': 'inputRegisterMenu', 'placeholder' : 'Confirm password'}}) }}
            </div>
            <div class="blockForError"> <div class="errorStyle">{{ form_errors(form.password.second) }}</div></div>

            <button type="submit" class="inputRegisterMenu inputRegisterMenuButton" value="Change password">Change password
            </button>

            <input type="hidden" name="token" value="{{ csrf_token('change-password') }}"/>
            {{ form_end(form) }}
        </div>
    </div>





{% endblock %}
{% block customJs %}
    <script src="https://cdn.jsdelivr.net/npm/vue/dist/vue.js"></script>
    {#    <script src="{{ asset('build/js/index.js') }}"></script>#}
{% endblock %}


