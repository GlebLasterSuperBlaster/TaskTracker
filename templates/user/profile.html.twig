        <div class="containerForRegisterMenu">
            <div class="registerMenu">
                <form name="user" id="app" action="{{ path('profile') }}" method="post" @submit="checkForm">

                <label class="labelRegisterMenu" for="user_email">Email</label>
                <div class="rightShowError">
                    <input type="email" name="user[email]" class="inputRegisterMenu" placeholder="Your email"
                           disabled="disabled" value="{{ app.user.email }}">
                </div>
                <div class="blockForError">
                </div>

                <label class="labelRegisterMenu" for="user_name">Name</label>
                <div class="rightShowError">
                    <input type="text" name="user[name]" class="inputRegisterMenu" placeholder="Your last name"
                           value="{{ app.user.name }}">
                </div>
                <div class=" blockForError">
                    <div class="errorStyle">{% if errors.name is defined%}{{ errors.name }}{% endif %}</div>
                </div>

                <label class="labelRegisterMenu" for="user_lastName">Last name</label>
                <div class="rightShowError">
                    <input type="text" name="user[lastName]" class="inputRegisterMenu" placeholder="Your last name"
                           value="{{ app.user.lastName }}">
                </div>
                <div class=" blockForError">
                    <div class="errorStyle"> {% if errors.lastName is defined%}{{ errors.lastName  }}{% endif %}</div>
                </div>

                <label class="labelRegisterMenu" for="currentPassword">Password</label>
                <div class="rightShowError">
                    <input type="password" name="user[currentPassword]" class="inputRegisterMenu" placeholder="Password">
                </div>
                    <div class="blockForError">
                        <div class="errorStyle">{% if errors.notValidCurrentPassword is defined%}{{ errors.notValidCurrentPassword }}{% endif %}</div>
                    </div>
                <label class="labelRegisterMenu" for="user_password_first">Change password</label>
                <div class="rightShowError">
                    <input type="password" name="user[password][first]" class="inputRegisterMenu" placeholder="New password" v-model="user_password_first">
                </div>
                <div class="blockForError">
                    <div class="errorStyle">{% if errors.password is defined%}{{ errors.password }}{% endif %}</div>
                </div>

                <label class="labelRegisterMenu" for="user_password_second">Confirm new password</label>
                <div class="rightShowError">
                    <input type="password" name="user[password][second]" class="inputRegisterMenu" placeholder="Confirm new password" v-model="user_password_second">
                </div>
                <div class="blockForError">
                    <div class="errorStyle" v-if="errors.length">${ errors }</div>

                </div>

                <button type="submit" class="inputRegisterMenu inputRegisterMenuButton" value="Create account">Save
                    changes
                </button>

                <input type="hidden" name="token" value="{{ csrf_token('user-profile') }}"/>
                </form>
