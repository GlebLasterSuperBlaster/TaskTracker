{% extends 'base.html.twig' %}
{% block customStylesheets %}
    <link rel="stylesheet" href="{{ asset('build/css/loginpage.css') }}" />
{% endblock %}
{% block title %}Hello FrontController!{% endblock %}

{% block body %}
    <div class="singUP">Log in</div>
    <div class="container">
        <div class="registerMenu">
            <form name="forgot_password" action="{{ path('forgot_password') }}" method="post">
                <label class="labelRegisterMenu" for="email">Email</label>
                <input class="inputRegisterMenu" name="user_email" id="email" type="email" v-model="email" placeholder="your email"><br>

                <input class="inputRegisterMenu inputRegisterMenuButton" type='submit' value="Restore password">
                <input type="hidden" name="token" value="{{ csrf_token('forgot_password') }}">
            </form>

        </div>
    </div>


    </div>
{% endblock %}
{% block customJs %}
    {# <script src="https://cdn.jsdelivr.net/npm/vue/dist/vue.js"></script>
     <script src="{{ asset('build/js/login.js') }}"></script>#}
{% endblock %}
